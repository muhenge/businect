<%= @user.username%>
<%= @user.bio %>
<%= @user.interest.field_of_interest %>
<%= image_tag(@user.avatar,:class => "responsive-img", alt: "user image") if @user.avatar.attached?%>
<% @user.posts.each do |user_post| %>
    <%= user_post.content %>
<%end%>

    <% if current_user && current_user.following?(@user) %>
        <%= render 'unfollow' %>
    <% else %>
        <%= render 'follow' %>
    <% end %>
<%= render 'shared/relation' %>
