<%= link_to  "Connect", new_user_session_path %>
<%= link_to  "Company connect", new_company_session_path %>

<%= current_user.email.downcase %>

<%= link_to 'Add a post', new_post_path %>

<% @posts.each do |post| %>
    <%= post.content %>
    <%= link_to 'Read', post_path(post) %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>