  <div class="row  center-align">

   <div class="col s12 m12 l6">
    <h4>Create an account</h4>
    <div class="center-block sign-up">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="center-align materialize-red-text errors">
        <%= render "devise/shared/error_messages", resource: resource%> 
      </div>
        <div class="field">
          <%= f.text_field :username, autofocus: true, autocomplete: "username",placeholder:"Username" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email" %>
        </div>

        <div class="field">
          <%= f.collection_select(:interest_id, Interest.all, :id, :field_of_interest, :prompt => 'Select your favorite interest') %>
      </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password, 6 characters mininum" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Verify password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn" %> or <%= render "devise/shared/links" %>

        </div>
      <% end %>
    </div>
  </div>
  <div class="col s12 m12 l6 hide-on-med-and-down">
    <%= image_tag 'gif', class:"gif" %>
  </div>
</div>
